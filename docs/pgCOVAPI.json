          },
          "tamponi_test_antigenico_rapido": {
            "type": "integer"
          },
          "codice_nuts_1": {
            "type": "string"
          },
          "codice_nuts_2": {
            "type": "string"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
