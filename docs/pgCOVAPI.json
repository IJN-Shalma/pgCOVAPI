{
  "openapi": "3.0.0",
  "info": {
    "version": "0.1",
    "title": "pgCOVAPI",
    "description": "API che fornisce dati riguardo l'epidemia COVID in Italia",
    "termsOfService": "",
    "contact": {
      "name": "",
