{
  "openapi": "3.0.0",
  "info": {
    "version": "0.2",
    "title": "pgCOVAPI",
    "description": "API che fornisce dati riguardo l'epidemia COVID in Italia. <br> Progetto maturità 2021 5^C Informatica IIS A.Avogadro. <br> <b>Alunni:</b> Silvio Caprara, Pietro Chiartano, Yun Qing Zhou.",
    "termsOfService": "",
    "contact": {
      "name": "",
      "url": ""
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "https://pgcovapi.herokuapp.com/api/"
    }
  ],
  "tags": [
    {
      "name": "Regioni",
      "description": "Dati COVID delle singole regioni"
    }
  ],
  "paths": {
    "/regioni/{regione}": {
      "get": {
        "tags": [
          "Regioni"
        ],
        "description": "Ritorna tutti i dati riguardanti l'epidemia in una regione, organizzati per giorno dal primo giorno dell'epidemia all'ultimo giorno presente nel database.\n",
        "operationId": "findRegione",
        "parameters": [
          {
            "name": "regione",
            "in": "path",
            "description": "Regione italiana da ricercare. La prima lettera deve essere maiuscola.",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "mese",
            "in": "query",
            "description": "Mese da ricercare. Va riportato in formato <b>mm-yyyy</b>, ad esempio 09-2020 per ottenere i dati del mese di settembre 2020.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "giorni",
            "in": "query",
            "description": "In base al valore N inserito, ritorna i record degli ultimi N giorni. Ad esempio, se il valore inserito è 30 ritorna i record degli ultimi 30 giorni. <br> Il parametro giorni, se riportato insieme al parametro mese, viene ignorato.",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "summary": "Ritorna tutti i dati riguardanti l'epidemia in una regione, organizzati per giorno dal primo giorno dell'epidemia all'ultimo giorno presente nel database.",
        "responses": {
          "200": {
            "description": "Risposta con un array di oggetti, ognuno rappresentante un giorno nella regione selezionata",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Regione"
                },
                "example": {
                  "data": "2021-03-27T17:00:00",
                  "stato": "ITA",
                  "codice_regione": 1,
                  "denominazione_regione": "Piemonte",
                  "lat": 45.0732745,
                  "lon": 7.680687483,
                  "ricoverati_con_sintomi": 3767,
                  "terapia_intensiva": 360,
                  "totale_ospedalizzati": 4127,
                  "isolamento_domiciliare": 31458,
                  "totale_positivi": 35585,
                  "variazione_totale_positivi": 450,
                  "nuovi_positivi": 2636,
                  "dimessi_guariti": 256309,
                  "deceduti": 10180,
                  "casi_da_sospetto_diagnostico": null,
                  "casi_da_screening": null,
                  "totale_casi": 302074,
                  "tamponi": 3231331,
                  "casi_testati": 1484100,
                  "note": null,
                  "ingressi_terapia_intensiva": 27,
                  "note_test": null,
                  "note_casi": null,
                  "totale_positivi_test_molecolare": 288766,
                  "totale_positivi_test_antigenico_rapido": 13308,
                  "tamponi_test_molecolare": 2350377,
                  "tamponi_test_antigenico_rapido": 880954,
                  "codice_nuts_1": "ITC",
                  "codice_nuts_2": "ITC1"
                }
              }
            }
          }
        }
      }
    },
    "/regioni/{regione}/{campo}": {
      "get": {
        "tags": [
          "Regioni"
        ],
        "description": "Ritorna tutti i dati riguardanti l'epidemia in una regione, con la possibilità di specificare solo il campo voluto.\n",
        "operationId": "findRegioneCampo",
        "parameters": [
          {
            "name": "regione",
            "in": "path",
            "description": "Regione italiana da ricercare. La prima lettera deve essere maiuscola.",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "campo",
            "in": "path",
            "description": "Campo specifico da ritornare. I campi <b>data</b>, <b>stato</b>, <b>codice_regione</b> e <b>denominazione_regione</b> sono ritornati in ogni caso.",
            "required": true,
            "type": "string",
            "enum": [
              "ricoverati_con_sintomi",
              "terapia_intensiva",
              "totale_ospedalizzati",
              "isolamento_domiciliare",
              "totale_positivi",
              "variazione_totale_positivi",
              "nuovi_positivi",
              "dimessi_guariti",
              "deceduti",
              "totale_casi",
              "tamponi",
              "casi_testati",
              "ingressi_terapia_intensiva",
              "totale_positivi_test_molecolare",
              "totale_positivi_test_antigenico_rapido",
              "tamponi_test_molecolare",
              "tamponi_test_antigenico_rapido"
            ]
          },
          {
            "name": "mese",
            "in": "query",
            "description": "Mese da ricercare. Va riportato in formato <b>mm-yyyy</b>, ad esempio 09-2020 per ottenere i dati del mese di settembre 2020.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "giorni",
            "in": "query",
            "description": "In base al valore N inserito, ritorna i record degli ultimi N giorni. Ad esempio, se il valore inserito è 30 ritorna i record degli ultimi 30 giorni. <br> Il parametro giorni, se riportato insieme al parametro mese, viene ignorato.",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "summary": "Ritorna tutti i dati riguardanti l'epidemia in una regione con la possibilità di selezionare il campo voluto.",
        "responses": {
          "200": {
            "description": "Risposta con un array di oggetti, ognuno rappresentante un giorno nella regione selezionata",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Regione"
                },
                "example": {
                  "data": "2021-03-27T17:00:00",
                  "stato": "ITA",
                  "codice_regione": 1,
                  "denominazione_regione": "Piemonte",
                  "ricoverati_con_sintomi": 3767,
                  "terapia_intensiva": 360
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Regione": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string"
          },
          "stato": {
            "type": "string"
          },
          "codice_regione": {
            "type": "integer"
          },
          "denominazione_regione": {
            "type": "string"
          },
          "lat": {
            "type": "number",
            "format": "double"
          },
          "long": {
            "type": "number",
            "format": "double"
          },
          "ricoverati_con_sintomi": {
            "type": "integer"
          },
          "terapia_intensiva": {
            "type": "integer"
          },
          "totale_ospedalizzati": {
            "type": "integer"
          },
          "isolamento_domiciliare": {
            "type": "integer"
          },
          "totale_positivi": {
            "type": "integer"
          },
          "variazione_totale_positivi": {
            "type": "integer"
          },
          "nuovi_positivi": {
            "type": "integer"
          },
          "dimessi_guariti": {
            "type": "integer"
          },
          "deceduti": {
            "type": "integer"
          },
          "casi_da_sospetto_diagnostico": {
            "type": "integer"
          },
          "casi_da_screening": {
            "type": "integer"
          },
          "totale_casi": {
            "type": "integer"
          },
          "tamponi": {
            "type": "integer"
          },
          "casi_testati": {
            "type": "integer"
          },
          "note": {
            "type": "string"
          },
          "ingressi_terapia_intensiva": {
            "type": "integer"
          },
          "note_test": {
            "type": "string"
          },
          "note_casi": {
            "type": "string"
          },
          "totale_positivi_test_molecolare": {
            "type": "integer"
          },
          "totale_positivi_test_antigenico_rapido": {
            "type": "integer"
          },
          "tamponi_test_molecolare": {
            "type": "integer"
          },
          "tamponi_test_antigenico_rapido": {
            "type": "integer"
          },
          "codice_nuts_1": {
            "type": "string"
          },
          "codice_nuts_2": {
            "type": "string"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}